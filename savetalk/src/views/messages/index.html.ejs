<html>

<head>
    <link rel="stylesheet" href="src/assets/styles/index.scss">
</head>

<body>


    <header>
        <h1>Mensajes</h1>
        <p>Cantidad de mensajes: <%= messages.length %></p>
    </header>
    <div class="topnav">
        <a href="<%= dentistPath(iddentist) %>" style="float:right">Volver</a>
    </div>




    <div class="card">
        <h1>Enviar un nuevo mensaje </h1>
        <div class="button"><a href="<%= newMessagePath %>">Enviar un nuevo mensaje</a></div>
    </div>


    <div class="card">
        <h2> Todos los mensajes</h2>
    <% messages.forEach( message => { %>

    <div class="card2">
        <h3>Mensaje enviado por: <%= message.idSend %></h3>
        <p>Mensaje recibido por: <%= message.idReceive %></p>

         <div class="button"><a href="<%= messagePath(message.id) %>">leer</a></div>

    </div>
    <% }) %>

    </div>

    <div class="card">
    <h1>Mensajes enviados <%= messagesDentistSent.length %> </h1>

    <% messagesDentistSent.forEach( message => { %>

    <div class="card2">
        <h2>Mensaje enviado por: <%= message.idSend %></h2>
        <p>Mensaje recibido por: <%= message.idReceive %></p>
        <div class="button"><a href="<%= messagePath(message.id) %>">leer</a></div>

    </div>
    <% }) %>
    </div>
    
    <div class="card2">
    <h1>Mensajes recividos <%= messagesDentistReceive.length %> </h1>
    <% messagesDentistReceive.forEach( message => { %>

    <div class="card2">
        <h2>Mensaje enviado por: <%= message.idSend %></h2>
        <p>Mensaje recibido por: <%= message.idReceive %></p>
        <div class="button"><a href="<%= messagePath(message.id) %>">leer</a></div>

    </div>
    <% }) %>
    </div>
</body>

</html>