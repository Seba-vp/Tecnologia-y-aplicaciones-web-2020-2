<html>

<head>
    <link rel="stylesheet" href="src/assets/styles/index.scss">
</head>

<body>

    <header>
        <h1> <%= dentist.name %> </h1>

    </header>
    <div class="topnav">
      
      
        <a href="<%= seePainsPath(dentist.id) %>"> Ver Dolores disponibles </a>
        <a href="<%= messagesPath(dentist.id) %>"> Ver mensajes </a>
        <a href="<%= seeChatsPath(dentist.id) %>"> Ver contactos </a>
        <a href="<%= updateDentistPath(dentist.id) %>"> Modificar Dentista </a>
        <a href="<%= deleteDentistPath(dentist.id) %>"> Borrar Dentista </a>
        <a href="#" style="float:right">Volver</a> 
    </div>




    <div class="card">
        <h2>Universidad: <%= dentist.university %> </h2>
        <h2>Año de la carrera: <%= dentist.year %> </h2>
        <h2>Cantidad de contactos: <%= chats.length %> </h2>
        <h2>id dentista: <%= dentist.id %> </h2>
    </div>

    <% infoToSend.forEach( info => { %>
    <div class="card">

        <% if (info.date.state === 1) { %>

        <h2>Cita confirmada!</h2>
        <p>Cita con el id: <%= info.date.id %></p>
        <p>Cita con el paciente: <%= info.patient.name %> </p>
        <p>Nombre del Dolor: <%= info.pain.name %> </p>
        <p>Descripción del Dolor: <%= info.pain.description %> </p>
        <form action="<%= doneDatePath(info.date.id) %>" method="post">
            <input type="hidden" name="_method" value="patch" />
            <input type="submit" value="Cita realizada con éxito" />
        </form>

        <% } else if (info.date.state === 2) { %>

        <h2>Cita Ya fue llevada a cabo!</h2>
        <p>Cita con el id: <%= info.date.id %></p>
        <p>Cita con el paciente: <%= info.patient.name %> </p>
        <p>Nombre del Dolor: <%= info.pain.name %> </p>
        <p>Descripción del Dolor: <%= info.pain.description %> </p>

        <p>Este fue tu feedback: (implementación futuro)</p>

        <% } %>

        </div>
    <% }) %>

    <div class="card">
        <div class="button">
        <a href="<%= seePainsPath(dentist.id) %>"> Ver Dolores disponibles </a>
    </div>
    <div class="button">
        <a href="<%= messagesPath(dentist.id) %>"> Ver mensajes </a>
    </div>
    <div class="button">
        <a href="<%= seeChatsPath(dentist.id) %>"> Ver contactos </a>
    </div>
    </div>

    <div class="card">
    <div class="button">
        <a href="<%= updateDentistPath(dentist.id) %>"> Modificar Dentista </a>
    </div>
    <div class="button">
        <a href="<%= deleteDentistPath(dentist.id) %>"> Borrar Dentista </a>
    </div>
    </div>
    </div>

</body>

</html>