<html>
    <head>
    <link rel="stylesheet" href="src/assets/styles/plantilla1.scss">
    </head>
    
    <body>
    
<div class="header">
    <h1> <%= dentist.name %> </h1>
        
</div>




<div class="caja2">
<p>Universidad: <%= dentist.university %> </p>
<p>Año de la carrera: <%= dentist.year %> </p>
</div>

<% dates.forEach( date => { %>
    <div class="caja2">

        <% if (date.state === 1) { %>

            <h2>Cita confirmada!</h2>
            <p>Cita con el id: <%= date.id %></p>
            <form action="<%= doneDatePath(date.id) %>" method="post">
                <input type="hidden" name="_method" value="patch" />
                <input type="submit" value="Cita realizada con éxito" />
            </form>
            <p><a href=#>Ver información</a></p>
        
        <% }%>

    </div>
<% }) %>

<div class="caja2">
<p><a href="<%= seePainsPath(dentist.id) %>" > Ver Dolores disponibles </a></p>
<br>
<p><a href="<%= updateDentistPath(dentist.id) %>" > Modificar Dentista </a></p>
<br>
<p><a href="<%= deleteDentistPath(dentist.id) %>" > Borrar Dentista </a></p>
</div>


<div class="pie">
    <p>Made with &#10084;&#65039; by Rodolfo Mendoza Jorge Toro & Sebastian Villablanca.</p>
  </div>
</body>
</html>


