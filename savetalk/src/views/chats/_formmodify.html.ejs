<form method="post" action="<%= updateChatPathDataBase(element.chat.id) %>">
    <% if (locals.errors){ %>
    <div class="card2">
        <p>No se pudo cambiar la conexión por lo siguiente:</p>
        <ul>
            <% errors.forEach(error => { %>
            <li><%= error.path %>: <%= error.message %> </li>
            <% }); %>
        </ul>
    </div>
    <% } %>
    <div>
        <table>
            <tr>
                <td><label for="block">Conexión:</label></td>
                <select name="block" id="block">
                    <option value="true"> Bloquear usuario </option>
                    <option value="false"> Desbloquear usuario </option>
                </select>
            </tr>
        </table>
    </div>
    <div>
        <input type="submit" value="Modificar conexión" />
    </div>
</form>