<header>
    <img id="logo" src="<%= cloudinary.url('rqaga2u0qibj10mx4yqb') %>">
</header>

<div class="topnav">
    <a href="#">DentList</a>
</div>

<div class="grid-container-index">
        <div class="left-index">
            <h2>Iniciar sesión como paciente</h2>
            <form method="post" action="<%= loginPatientPath %>">
                <% if (locals.error){ %>
                <div>
                    <p>No pudiste iniciar sesión debido a:</p>
                    <p><%= error %></p>
                </div>
                <% } %>
                <table>
                    <tr>
                        <div class="field">
                            <td><label for="email">E-mail</label></td>
                            <td><input type="email" id="email" name="email" value="<%= locals.email %>" /></td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td><label for="password">Contraseña</label></td>
                            <td><input type="password" id="password" name="password" /></td>
                        </div>
                    </tr>
                </table>
                <div class="button-index-enter">
                    <input class="input" type="submit" value="Entrar" />
                </div>
            </form>
        </div>
        <div class="middle-index">
            <h2>¡Registrate ahora!</h2>
    
            <div class="button-index">
                <a href="<%=patientRegistrationPath %>">Registrarse como Paciente</a>
            </div>
            <div class="button-index">
                <a href="<%=dentistRegistrationPath %>">Registrarse como Dentista</a>
            </div>
        </div>
        <div class="right-index">
            <h2>Iniciar sesión como dentista</h2>
            <form method="post" action="<%= loginDentistPath %>">
    
                <% if (locals.error){ %>
                <div>
                    <p>No pudiste iniciar sesión debido a:</p>
                    <p><%= error %></p>
                </div>
                <% } %>
    
                <table>
                    <tr>
                        <div class="field">
                            <td><label for="mail">E-mail</label></td>
                            <td><input type="mail" id="mail" name="mail" value="<%= locals.mail %>" /></td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td><label for="password">Contraseña</label></td>
                            <td><input type="password" id="password" name="password" /></td>
                        </div>
                    </tr>
    
                </table>
                <div class="button-index-enter">
                    <input class="input" type="submit" value="Entrar" />
                </div>
            </form>
    
        </div>
    </div>

<div class="row">
    <div class="leftcolumn">


        <!-- Notificar que estas conectado como algo -->
        <% if (locals.currentPatient) { %>
        <div class="card">
            <h2>Estas conectado como PACIENTE: </h2>
            <h3><%= currentPatient.email %></h3>
            <h3><%= currentPatient.name %></h3>
        </div>

        <% } else if (locals.currentDentist) { %>
        <div class="card">
            <h2>Estas conectado como DENTISTA: </h2>
            <h3><%= currentDentist.mail %></h3>
            <h3><%= currentDentist.name %></h3>
        </div>

        <% } else { %>


        <!-- Noticias-->
        <div class="card4">
            <h1>Noticias</h1>
            <div class="row">

                <% articlesShuffled = articles.sort(() => 0.5 - Math.random());%>
                <% randomArticles = articlesShuffled.slice(0, 2);%>
                <% randomArticles.forEach( article => { %>
                <div class="column">
                    <div class="card3">

                        <h1><%= article.title %> </h1>
                        <p><%= article.description %></p>
                        <div class="fakeimg2">
                            <img src="<%= article.urlToImage%>" alt="<%= article.urlToImage %>">
                        </div>
                        <br>
                        <div class="button">
                            <a href="<%= article.url %>">Ver más</a>
                        </div>
                    </div>
                </div>

                <% }) %>
            </div>
        </div>


        <% } %>
    </div>


    <div class="rightcolumn">
        <% postsShuffled = posts.sort(() => 0.5 - Math.random());%>
        <% randomPosts = postsShuffled.slice(0, 3);%>
        <% randomPosts.forEach( post => { %>
        <div class="card">

            <h1><%= post.title %> </h1>
            <p><%= post.description %></p>


            <div class="fakeimg2">
                <img src="<%= cloudinary.url(post.image) %>" alt="<%= post.image %>">

            </div>
            <br>
            <div class="button">
                <a href="<%= postPath(post.id) %>">Ver más</a>
            </div>

        </div>
        <% }) %>
    </div>

</div>
