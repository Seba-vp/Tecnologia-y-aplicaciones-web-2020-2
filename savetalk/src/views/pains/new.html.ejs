<h1>Creando dolor del paciente: <%= patient.name %> </h1>

<form method="post" action="<%= createPainPath(patient.id) %>" >

    <% if (locals.errors){ %>
        <div>
            <p>El dolor no se pudo crear debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.path %>: <%= error.message %> </li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <div>
        <label for="name" >Nombre resumido del dolor: </label>
        <input type="text" name="name" id="name" value="<%= pain.name %>" />
    </div>
    <div>
        <label for="description" >Descripción del dolor: </label>
        <textarea name="description" id="description" ><%= pain.description %></textarea>
    </div>
    <div>
        <label for="category" >Categoría del dolor: </label>
        <input type="text" name="category" id="category" value="<%= pain.category %>" />
    </div>
    <div>
        <input type="submit" value="Crear Dolor" />
    </div>
</form>